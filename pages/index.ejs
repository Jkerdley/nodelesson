<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
<% if (created) {%>
    <div class="alert alert-success">Note has been created</div>
    <%}%>
    <div class="container">
        <h1><%= title %></h1>
        <form action="/" class="mb-2" method="post">
            <div class="form-group mb-2">
                <input type="text" class="form-control" name="title" required>
            </div>
            <button class="btn btn-primary" type="submit">Create</button>
        </form>
        <% if (notes.length) { %>
            <div class="card">
                <ul class="list-group">
                    <% for (let i = 0; i < notes.length; i++) {%>
                    <li class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center view-mode">
                            <span class="note-title flex-grow-1"><%=notes[i].title %></span>
                            <div>
                                <button class="btn btn-sm btn-primary me-2 edit-btn"
                                        data-id="<%=notes[i].id%>">
                                    Обновить
                                </button>
                                <button class="btn btn-sm btn-danger remove-btn"
                                        data-type="remove"
                                        data-id="<%=notes[i].id%>">
                                    &times;
                                </button>
                            </div>
                        </div>

                        <div class="edit-mode d-none">
                            <div class="d-flex gap-2">
                                <input type="text"
                                       class="form-control form-control-sm edit-input"
                                       value="<%=notes[i].title %>">
                                <div class="d-flex gap-2">
                                    <button class="btn btn-sm btn-success save-btn">Сохранить</button>
                                    <button class="btn btn-sm btn-secondary cancel-btn">Отмена</button>
                                </div>
                            </div>
                        </div>
                    </li>
                    <% } %>
                </ul>
            </div>
        <%} else {%>
            <h3>Тут нет заметок</h3>
        <%}%>
    </div>
<script src="/app.js"></script>
</body>
</html>